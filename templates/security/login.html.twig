{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block body %}

        <div class="row">
            <div class="col-lg-4 offset-lg-4 my-4">
                <div class="login_title">
                    <h3>CONNEXION</h3>
                </div>
                <div class="container">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                    <label for="inputEmail" class="my-1 email_login">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           required
                           autofocus>
                    <label for="inputPassword" class="my-1 mdp_login">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                    <div class="checkbox mb-3">
                        <label class="my-2">
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                    <div>
                        <button class="btn btn-lg btn_login" type="submit">
                            Connexion
                        </button>
                    </div>
                </form>
                </div>
                <br>
            </div>
            <a href="{{ path('app_register') }}" style="text-align: center">Cr√©er mon compte</a>
        </div>
{% endblock %}
