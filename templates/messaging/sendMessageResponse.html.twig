{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/sendMessageResponse.css') }}"/>
{% endblock %}

{% block body %}
         <div class="row">
            <div class="col-lg-3 border-end border-3">
                {{ render(controller('App\\Controller\\DashBoardNavController::navBar')) }}
            </div>
            <div class="col-lg-9 ">
                <div class="row">
                     <div class="col-lg-12 border-messaging">
                        <a href="{{ path('messaging')}} "><h4>Messagerie {% if nonlu != 0 %}({{ nonlu }}){% endif %}</h4></a>
                     </div>
                </div>
                {{ form_start(formMessage, {'attr': {'class': 'row'}}) }}
                    <div class="row">
                        <div class="col-lg-12 border rounded-div border-2 shadow bg-light">
                            <div class="row">
                                <div class="col-lg-3">
                                    <a href="{{ path('messaging') }}" class="col-lg-2 btnBackTo">
                                        <img class="messageImgPencil" src="{{ asset('img/boostrap/arrow-left.svg') }}"/>RETOUR</a>
                                </div>
                                <div class="col-lg-3"></div>
                                <div class="col-lg-3">
                                     <button type="submit" class="btn required btn_send_response">Envoyer</button>
                                 </div>
                            </div>
                     </div>
                        <div class="col-lg-3">
                            <label class="btn buttonPj" for="formCv">Pièce jointe</label>
                            {{ form_row(formMessage.cvFile, { 'id': 'formCv'}) }}
                        </div>
                        <div class="col-lg-3">
                            <label class="btn buttonPj " for="formMedia">Autre pièce jointe</label>
                            {{ form_row(formMessage.mediaFile, { 'id': 'formMedia'}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 rounded-div border border-2 shadow bg-light block_info_message">
                            {% if "ROLE_CANDIDATE" in app.user.roles %}
                                <p class="p_info_message">À : <strong>{{userSender.entityName }}</strong></p>
                            {% elseif "ROLE_RECRUITER" in app.user.roles %}
                                <p class="p_info_message">À : <strong>{{ userSender.firstname }} {{ userSender.lastname }}</strong></p>
                            {% endif %}
                                <p class="formText p_info_message" >Sujet : <strong>{{ messageRecu.subject }}</strong></p>
                                <p class="p_info_message">{{ messageRecu.body }}</p>
                                <hr class="line">
                               <p class="p_info_message"><strong> Re: {{ messageRecu.subject }}{{ form_row(formMessage.body) }}</strong></p>
                        </div>
                    </div>
                {{ form_end(formMessage) }}
            </div>
        </div>
{% endblock %}