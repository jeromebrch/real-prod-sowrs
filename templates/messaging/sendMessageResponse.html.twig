{% extends 'base.html.twig' %}

{% block body %}
         <div class="row">
            <div class="col-lg-3 border-end border-3">
                {{ render(controller('App\\Controller\\DashBoardNavController::navBar')) }}
            </div>
            <div class="col-lg-9 ">
                <div class="row">
                     <div class="col-lg-12 border-messaging">
                        <a href="{{ path('messaging')}} "><h4>Messagerie {% if nonlu != 0 %}({{ nonlu }}){% endif %}</h4></a>
                     </div>
                </div>
                    {{ form_start(formMessage, {'attr': {'class': 'row'}}) }}
                        <div class="row">
                            <div class="col-lg-12 border rounded-div border-2 shadow bg-light">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <a href="{{ path('messaging') }}" style="width: 150px; margin: 20px;text-decoration: none" class="col-lg-2 btnBackTo">
                                            <img class="messageImgPencil" src="{{ asset('img/boostrap/arrow-left.svg') }}"/> RETOUR</a>
                                    </div>
                                    <div class="col-lg-3"></div>
                                    <div class="col-lg-3">
                                         <button type="submit" style="width: 150px; margin: 20px" class="btn required ">Envoyer</button>
                                     </div>
                                </div>
                         </div>
                            <div class="col-lg-3">
                                <label  style="width: 200px; margin: 20px" class="btn buttonPj" for="formCv">pièce jointe</label>
                                {{ form_row(formMessage.cvFile, { 'id': 'formCv'}) }}
                            </div>
                            <div class="col-lg-3">
                                <label  style="width: 200px; margin: 20px" class="btn buttonPj " for="formMedia">autre pièce jointe</label>
                                {{ form_row(formMessage.mediaFile, { 'id': 'formMedia'}) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 rounded-div border border-2 shadow bg-light" style="background-color: white; margin: 10px" >
                                {% if "ROLE_CANDIDATE" in app.user.roles %}
                                    <p style="text-align: left">À : <strong>{{ messageRecu.userSender.entityName }}</strong></p>
                                {% elseif "ROLE_RECRUITER" in app.user.roles %}
                                    <p style="text-align: left">À : <strong>{{ userSender.firstname}} {{ userSender.lastname }}</strong></p>
                                {% endif %}
                                    <p class="formText" style="text-align: left">Sujet : <strong>{{ messageRecu.subject }}</strong></p>
                                    <p style="text-align: left">{{ messageRecu.body }}</p>

                                <hr style="text-align: center">

                                   <p style="text-align: left"><strong> Re: {{ messageRecu.subject }}{{ form_row(formMessage.body) }}</strong></p>
                            </div>

                        </div>
                    {{ form_end(formMessage) }}
                </div>
            </div>
{% endblock %}