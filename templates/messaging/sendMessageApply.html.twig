{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid gx-0">
        <div class="row">
            <div class="col-lg-3 border-end border-3">
                {{ render(controller('App\\Controller\\DashBoardNavController::navBar')) }}
             </div>
            <div class="col-9 col-lg-9 ">
                <div class="row">
                    <div class="col-12 border-messaging ">
                        <a href="{{ path('messaging')}} " style="text-decoration: none"><h4>Messagerie {% if nonlu != 0 %}({{ nonlu }}){% endif %}</h4></a>
                    </div>
                    {{ form_start(formMessage) }}
                        <div class="row">
                            <div class="col-12 border border-2 p-3 m-4 gx-0 shadow bg-light">

                                <a href="{{ path('messaging') }}" style="width: 150px; margin: 20px;text-decoration: none" class="col-2" id="deleteMessage"><img class="messageImgPencil" src="{{ asset('img/boostrap/arrow-left.svg') }}"/> RETOUR</a>

                                <button  style="width: 250px; margin: 20px" class="btn required col-2">Ajouter une pièce jointe</button>
                                {{ form_row(formMessage.cvFile) }}
                                {{ form_row(formMessage.mediaFile) }}

                                <button type="submit" style="width: 150px; margin: 20px" class="btn required col-2">Envoyer</button>
                            </div>
                        </div>
                        <div class="row">
                                <div class="col-12 border rounded-div border-2 p-3 m-4 gx-0 shadow bg-light" style="background-color: white; margin: 10px" >

                                        <p style="text-align: left">À : <strong>{{ jobOffer.entity.entityName }}</strong></p>
                                        <p style="text-align: left">Sujet : <strong>Candidature au poste de {{ jobOffer.title }}</strong></p>

                                </div>
                            </div>
                        <div class="row">

                            <div class="col-12 border rounded-div border-2 p-3 m-4 gx-0 shadow bg-light" style="background-color: white; margin: 10px">
                                {{ form_row(formMessage.body) }}
                            </div>
                         </div>
                    {{ form_end(formMessage) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}