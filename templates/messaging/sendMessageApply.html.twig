{% extends 'base.html.twig' %}

{% block body %}
        <div class="row">
            <div class="col-lg-3 border-end border-3">
                {{ render(controller('App\\Controller\\DashBoardNavController::navBar')) }}
             </div>
            <div class="col-lg-9 ">
                <div class="row">
                    <div class="col-lg-12 border-messaging ">
                        <a href="{{ path('messaging')}} " style="text-decoration: none"><h4>Messagerie {% if messageState != 0 %}({{ messageState }}){% endif %}</h4></a>
                    </div>
                    {{ form_start(formMessage) }}
                        <div class="row">
                            <div class="col-lg-12 border rounded-div border-2 p-3 m-4 gx-0 shadow bg-light">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <a href="{{ path('messaging') }}" style="width: 150px; margin: 20px;text-decoration: none" class="col-lg-2 btnBackTo">
                                            <img class="messageImgPencil" src="{{ asset('img/boostrap/arrow-left.svg') }}"/> RETOUR</a>
                                    </div>
                                    <div class="col-lg-3"></div>
                                    <div class="col-lg-3">
                                        <button type="submit" style="width: 150px; margin: 20px" class="btn required ">Envoyer</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <label  style="width: 200px; margin: 20px" class="btn buttonPj" for="formCv">pièce jointe</label>
                                {{ form_row(formMessage.cvFile, { 'id': 'formCv'}) }}
                            </div>
                            <div class="col-lg-3">
                                <label  style="width: 200px; margin: 20px" class="btn buttonPj " for="formMedia">autre pièce jointe</label>
                                {{ form_row(formMessage.mediaFile, { 'id': 'formMedia'}) }}
                            </div>
                    </div>
                    <div class="row">
                                <div class="col-lg-12 border rounded-div border-2 p-3 m-4 gx-0 shadow bg-light" style="background-color: white; margin: 10px" >

                                        <p style="text-align: left">À : <strong>{{ jobOffer.entity.entityName }}</strong></p>
                                        <p style="text-align: left">Sujet : <strong>Candidature au poste de {{ jobOffer.title }}</strong></p>

                                </div>
                            </div>
                        <div class="row">

                            <div class="col-lg-12 border rounded-div border-2 p-3 m-4 gx-0 shadow bg-light" style="background-color: white; margin: 10px">
                                {{ form_row(formMessage.body) }}
                            </div>
                         </div>
                    {{ form_end(formMessage) }}
                </div>
            </div>
        </div>
{% endblock %}