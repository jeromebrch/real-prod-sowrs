{% extends 'bundles/TwigBundle/Exception/error.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    Erreur 500 - Internal server error
{% endblock %}


{% block body %}
    <div class="error_container">
        <div class="error_cl">
            <img src="{{ asset('img/error500.png') }}" class="error_img" alt="error 404" title="La page n'est pas trouvée" />
            <p class="error_info">
                Il semble que vous rencontriez une erreur serveur...<br />
                Notre équipe travaille à sa résolution au plus vite &#x1F41D
            </p>
            <a href="{{ path('main') }}" class="link_return_home btn">Revenir à l'accueil</a>
        </div>
    </div>
{% endblock %}