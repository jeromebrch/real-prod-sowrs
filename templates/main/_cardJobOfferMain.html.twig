<div class="row">
    <div class="col-lg-2 m-1 ">
            {% if jobOffer.entity.picture %}
                {% if jobOffer.entity.picture.pictureName is same as '' %}
                    <img style="width: 100%" class="rounded-circle"
                         src="{{ asset('images/profils/avatar.jpg') }}"
                         alt="photo du profil">
                {% else %}
                    <img style="width: 100%" class="rounded-circle"
                         src="{{ asset('images/profils/' ~jobOffer.entity.picture.pictureName ) }}"
                         alt="photo du profil">
                {% endif %}
            {% else %}
                <img style="width: 100%" id="show_candidate_photo_profile" class="rounded-circle"
                     src="{{ asset('images/profils/avatar.jpg') }}"
                     alt="photo du profil">
            {% endif %}
    </div>
    <div class="col-lg-6 col-sm-8 col-xs-12 content-box align-self-center">
        <div class="jobOffer_text">
            <a href="{{ path('jobOffer_show', {'id':jobOffer.id}) }}">{{ jobOffer.title }}</a>

            <p>{{ jobOffer.entity.entityName| capitalize }}
                {% if jobOffer.entity.mainCause is not empty %}
                    - {{ jobOffer.entity.mainCause.text }}
                {% endif %}
            </p>
        </div>
    </div>
    <div class="col-lg-2 offset-lg-1 align-self-center">
        <div class="jobOffer_contract_type">
{#            <button class="btn btn-lg btn-block btn-disable-hover btn_contract_type">{{ jobOffer.contractType.wording }}#}
{#            </button>#}
            {% if jobOffer.contractType.wording == 'CDI' %}
                <div class="abstract_contract_type col-2">{{ jobOffer.contractType.wording }}</div>
            {% elseif jobOffer.contractType.wording == 'CDD' %}
                <div class="abstract_contract_type_CDD col-2">{{ jobOffer.contractType.wording }}</div>
            {% elseif jobOffer.contractType.wording == 'Freelance - Indépendant' %}
                <div class="abstract_contract_type_FREELANCE col-2">{{ jobOffer.contractType.wording }}</div>
            {% elseif jobOffer.contractType.wording == 'Associé(e)' %}
                <div class="abstract_contract_type_ASSOCIE col-2">{{ jobOffer.contractType.wording }}</div>
            {% elseif jobOffer.contractType.wording == 'Stage' %}
                <div class="abstract_contract_type_STAGE col-2">{{ jobOffer.contractType.wording }}</div>
            {% elseif jobOffer.contractType.wording == 'Intérim' %}
                <div class="abstract_contract_type_INTERIM col-2">{{ jobOffer.contractType.wording }}</div>
            {% elseif jobOffer.contractType.wording == 'Service bénévole' %}
                <div class="abstract_contract_type_SERVICE col-2">{{ jobOffer.contractType.wording }}</div>
            {% elseif jobOffer.contractType.wording == 'Autre' %}
                <div class="abstract_contract_type_AUTRE col-2">{{ jobOffer.contractType.wording }}</div>
            {% endif %}
        </div>
    </div>
    {% if jobOffer in app.user.favoriteOffers %}
        <span title="Retirer des favoris">
            <a href="{{ path('remove_favorite_offer',  {'id': jobOffer.id }) }}" >
                <img class="favorite" src="{{ asset('img/suit-heart-fill.svg') }}" alt="remove favorites" title="Retirer des favoris"/>
            </a>
        </span>
    {% else %}
        <span title="Ajouter aux favoris">
            <a href="{{ path('add_favorite_offer',{'id': jobOffer.id  }) }}">
                <img class="favorite" src="{{ asset('img/suit-heart.svg') }}" alt="add favorites" title="Ajouter aux favoris"/>
             </a>
        </span>
    {% endif %}
</div>