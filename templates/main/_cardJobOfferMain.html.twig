<div class="row">
    <div class="col-lg-2 m-1 ">
            {% if jobOffer.entity.picture %}
                {% if jobOffer.entity.picture.pictureName is same as '' %}
                    <img style="width: 100%" class="rounded-circle"
                         src="{{ asset('images/profils/avatar.jpg') }}"
                         alt="photo du profil">
                {% else %}
                    <img style="width: 100%" class="rounded-circle"
                         src="{{ asset('images/profils/' ~jobOffer.entity.picture.pictureName ) }}"
                         alt="photo du profil">
                {% endif %}
            {% else %}
                <img style="width: 100%" id="show_candidate_photo_profile" class="rounded-circle"
                     src="{{ asset('images/profils/avatar.jpg') }}"
                     alt="photo du profil">
            {% endif %}
    </div>
    <div class="col-lg-6 col-sm-8 col-xs-12 content-box align-self-center">
        <div class="jobOffer_text">
            <a href="{{ path('jobOffer_show', {'id':jobOffer.id}) }}">{{ jobOffer.title }}</a>

            <p>{{ jobOffer.entity.entityName| capitalize }}
                {% if jobOffer.entity.mainCause is not empty %}
                    - {{ jobOffer.entity.mainCause.text }}
                {% endif %}
            </p>
        </div>
    </div>
    <div class="col-lg-2 offset-lg-1 align-self-center">
        <div class="jobOffer_contract_type">
            <button class="btn btn-lg btn-block btn-disable-hover btn_contract_type">{{ jobOffer.contractType.wording }}
            </button>
        </div>
    </div>
    {% if jobOffer in app.user.favoriteOffers %}
        <span title="Retirer des favoris">
            <a href="{{ path('remove_favorite_offer',  {'id': jobOffer.id }) }}" >
                <img class="favorite" src="{{ asset('img/suit-heart-fill.svg') }}" alt="remove favorites" title="Retirer des favoris"/>
            </a>
        </span>
    {% else %}
        <span title="Ajouter aux favoris">
            <a href="{{ path('add_favorite_offer',{'id': jobOffer.id  }) }}">
                <img class="favorite" src="{{ asset('img/suit-heart.svg') }}" alt="add favorites" title="Ajouter aux favoris"/>
             </a>
        </span>
    {% endif %}
