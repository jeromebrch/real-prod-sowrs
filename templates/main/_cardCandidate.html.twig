<div class="row">
        <div class="col-lg-1 m-3">
            {% if candidate.picture %}
                <img id="show_candidate_photo_profile" class="img-fluid img_user_card"
                     src="{{ asset('images/profils/' ~candidate.picture.pictureName ) }}"
                     alt="photo du profil" title="Photo de profil">
            {% else %}
                <img id="show_candidate_photo_profile" class="img-fluid img_user_card"
                     src="{{ asset('images/profils/avatar.jpg') }}"
                     alt="photo du profil" title="Photo de profil par dÃ©faut">
            {% endif %}
        </div>
    <div class="col-md-7 col-sm-8 col-xs-12 content-box">
        <div class="">
            <span>
                <a class="candidate_text_title" href="{{ path('candidate_show', {'id':candidate.id}) }}"><strong>{{ candidate.firstname|capitalize }} {{ candidate.lastname|upper }}</strong></a>
            </span><br>
            {% if candidate.currentRole %}
                <span>
                    <strong>{{ candidate.currentRole | capitalize}}</strong><br>
            {% endif %}
            {% if candidate.city and candidate.department is not empty %}
                    {{ candidate.city }} &bull; {{ candidate.department.name }} ({{ candidate.department.cp }})<br>
            {% endif %}
            {% if candidate.scoring is not empty %}
                <strong>Taux de sens: </strong>{{ candidate.scoring.dominantsens }} {{ candidate.scoring.societal }}%</span>
            {% endif %}
        </div>
    </div>
    <div class="col-md-3 align-self-center">
        <div class="candidate_contract_type ">
            <a class="btn" href="{{ path('candidate_show', {"id":candidate.id}) }}">Consulter le profil</a>
        </div>
    </div>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        {% if candidate in app.user.favoriteCandidates %}
            <span title="Retirer des favoris">
                <a href="{{ path('remove_favorite_cv',  {'id': candidate.id }) }}" >
                    <img class="favorite" src="{{ asset('img/suit-heart-fill.svg') }}" alt="remove favorites" title="Retirer des favoris"/>
                </a>
            </span>
        {% else %}
            <span title="Ajouter aux favoris">
                <a href="{{ path('add_favorite_cv',{'id': candidate.id  }) }}">
                    <img class="favorite" src="{{ asset('img/suit-heart.svg') }}" alt="add favorites" title="Ajouter aux favoris"/>
                 </a>
            </span>
        {% endif %}
    {% endif %}
