{% extends 'base.html.twig' %}

{% block title %}SOWRS | Offres d'emplois dans le secteur de l'IT{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/jobOffersList.css') }}">
    <meta name="description" content="En recherche de sens dans votre carrière ? Consultez les offres d'emploi sur sowrs.com pour trouver
                                l'employeur qui partage vos valeurs écologiques et sociales">
{% endblock %}

{% block meta %}
    <meta name="robots" content="index, follow" />
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row p-3">
            <div class="col-lg-4 p-3">
                <div class="jobOffer_filter p-3">
                    {{ form_start(formSearchHome) }}
                    <div class="p-1">
                        {{ form_row(formSearchHome.q) }}
                    </div>
                    <div class="p-1">
                        {{ form_row(formSearchHome.contractType) }}
                    </div>
                    <div class="p-1">
                        {{ form_row(formSearchHome.country) }}
                    </div>
                    <div class="p-1">
                        {{ form_row(formSearchHome.department) }}
                    </div>
                    <div class="p-1">
                        {{ form_row(formSearchHome.cause) }}
                    </div>
                    <div class="p-1">
                        {{ form_row(formSearchHome.levelStudy) }}
                    </div>
                    <div class="p-1">
                        {{ form_row(formSearchHome.levelExperience) }}
                    </div>
                    <div class="p-1">
                        {{ form_row(formSearchHome.remuneration) }}
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="p-1">
                                {{ form_row(formSearchHome.freshness) }}
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-1">
                                {{ form_row(formSearchHome.telecommute) }}
                            </div>
                        </div>
                    </div>
                    <div class="position-static">
                        <button type="submit" class="btn_jobOffer_filter">Rechercher</button>
                    </div>
                    {{ form_end(formSearchHome) }}
                </div>
            </div>
            <div class="col-lg-9 p-3">
                {% for jobOffer in jobOffers %}
                    <div class="job_offer_row bg-white p-3 mb-3">
                        {% include 'main/_cardJobOfferMain.html.twig' with {jobOffer: jobOffer} only %}
                    </div>
                {% endfor %}
                {{ knp_pagination_render(jobOffers) }}
            </div>
        </div>
    </div>

{% endblock %}