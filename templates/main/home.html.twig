{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Sowrs | Accueil{% endblock %}

{% block body %}
    {# Flash message #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="background-picture">
        <div class="row text-white p-5">
            <div class="col-lg-6 offset-lg-1 p-3 d-none d-md-block d-lg-block d-xl-block">
                <p class="title-background">Trouvez un sens à votre travail et sauvons le monde ensemble !</p>
                <br>
                <p class="subtitle-background">Sowrs</p>
                <p class="sub-subtitle-background">Pour profils techs engagés & entreprises à mission</p>
            </div>
            <div class="d-md-none d-lg-none d-xl-none">
                <h3 class="home_subtitle">Trouvez un sens à votre travail et sauvons le monde ensemble !</h3>
                <br>
                <h3 class="home_subtitle">Sowrs</h3>
                <h4 class="home_subtitle">Pour profils techs engagés & entreprises à mission</h4>
            </div>
            <div class="col-lg-5 d-none d-md-block d-lg-block d-xl-block">
                <div class="Background-jobOffer-filter-home p-3">
                    <div class="row">
                        <div class="col-lg-6 text-white">
                            <p class="m-0">Recherche rapide</p>
                        </div>
                        <div class="col-lg-6 text-end">
                            <a class="texte-green home_link" href="{{ path('main_job_offers_list') }}">Voir toutes les offres</a>
                        </div>
                    </div>
                    <div class="test">
                        {{ form_start(formSearchHome) }}
                        <div class="p-1">
                            {{ form_row(formSearchHome.q) }}
                        </div>
                        <div class="p-1">
                            {{ form_row(formSearchHome.contractType) }}
                        </div>
                        <div class="p-1">
                            {{ form_row(formSearchHome.country) }}
                        </div>
                        <div class="p-1">
                            {{ form_row(formSearchHome.cause) }}
                        </div>
                        <div class="p-1">
                            {{ form_row(formSearchHome.levelStudy) }}
                        </div>
                        <div class="p-1">
                            {{ form_row(formSearchHome.levelExperience) }}
                        </div>
                        <div class="p-1">
                            {{ form_row(formSearchHome.remuneration) }}
                        </div>
                        <div class="p-1">
                            {{ form_row(formSearchHome.freshness) }}
                        </div>
                        <div class="position-static p-1">
                            <button type="submit" class="btn-filter-home">Rechercher</button>
                        </div>
                        {{ form_end(formSearchHome) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row d-md-none d-lg-none d-xl-none pb-5">
            <div class="col-5 offset-1 p-1">
                <a class="btn home_btn_candidate_recruiter" href="{{ path('app_login') }}" role="button">Espace candidat</a>
            </div>
            <div class="col-5 p-1">
                <a class="btn home_btn_candidate_recruiter" href="{{ path('app_login') }}" role="button">Espace recruteur</a>
            </div>
        </div>
    </div>
{% endblock %}
