{% if "ROLE_RECRUITER" in app.user.roles %}
<div class="row match_card" style="height: 6em">
    <div class=" col-lg-2" style="height: 5em">
        <div class="rounded-circle match_card_sensrate">
       <p style="padding-top: 30%; color:#FFFFFF">{{ user.matching_rate }}%</p>
        </div>
    </div>
    <div class="match_card_picture col-lg-2" style="height: 5em">
    <div style="width: 100%; height:100%">
       <img class="rounded-circle"  style="width: 100%; height:100%"
                                src="{{ asset('images/profils/avatar.jpg') }}"
                                alt="photo du profil">
                                        </div>
    </div>
    <div class="match_card_description col-lg-5">
        <div class="align-self-center">
            <p>{{ user.last_name | upper }} {{ user.first_name | capitalize }} </p>
        </div>
        <div>
            <p>{{user.business_profile}}</p>
        </div>
        <div>
            <p>Ville non renseign√©e</p>
        </div>
    </div>
    <div class="col-lg-3 match_card_btn">
        <a href="" type="button" class="btn">Voir le profil</a>
    </div>
</div>

{% else %}
